<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleLifeCounter.MenuPage">
  <StackLayout>

    <Label Text="Life Font Coloer cange"
          x:Name="lc" />
    <Picker x:Name="LifeFontColorPicker" />

    <Label Text="Background Coloer cange"
          x:Name="bc" />
    <Picker x:Name="BackgroundColorPicker"
            BackgroundColor="{Binding Life_Color}"/>

    <Label Text="Default Life"
           x:Name="cc" />
    <Picker x:Name="LifeNum" />

    <Label Text="Life Reset Confirmation"
           x:Name="lrc" />
    <Switch x:Name="lrcSwitch" />

    <Button x:Name="SaveButton"
            Text="Save" />

    

  </StackLayout>
</ContentPage>